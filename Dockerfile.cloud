ARG BASE_IMAGE=114.212.87.136:5000/python:3.9-slim-amd64
FROM ${BASE_IMAGE}

# 设置工作目录
WORKDIR /app

# 安装必要的系统工具
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    openssh-client \
    && rm -rf /var/lib/apt/lists/*

# 复制应用文件
COPY cloud.py /app/

# 设置权限
RUN chmod +x /app/cloud.py

# 创建SSH密钥目录
RUN mkdir -p /root/.ssh

# 设置环境变量
ENV PYTHONUNBUFFERED=1

# 默认命令
CMD ["python3", "cloud.py", "--help"]

