ARG BASE_IMAGE=114.212.87.136:5000/python:3.9-slim-amd64
FROM ${BASE_IMAGE}

# 设置工作目录
WORKDIR /app

# 安装必要的系统工具
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    sudo \
    && rm -rf /var/lib/apt/lists/*

# 复制应用文件
COPY edge.py /app/

# 设置权限
RUN chmod +x /app/edge.py

# 创建日志目录
RUN mkdir -p /tmp && chmod 777 /tmp

# 设置环境变量
ENV PYTHONUNBUFFERED=1

# 暴露端口
EXPOSE 9999

# 默认命令
CMD ["python3", "edge.py"]
